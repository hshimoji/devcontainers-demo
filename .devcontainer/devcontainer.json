{
  "name": "Go + PostgreSQL Dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "initializeCommand": "test -f $HOME/.pgpass || (touch $HOME/.pgpass && chmod 600 $HOME/.pgpass)",
  "features": {
    "ghcr.io/devcontainers/features/go:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "containerEnv": {
    "APPENV": "local"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "yzhang.markdown-all-in-one",
        "bierner.markdown-mermaid",
        "ms-azuretools.vscode-docker",
        "openai.chatgpt"
      ]
    }
  },
  "forwardPorts": [5432],
  "postCreateCommand": "go mod download && npm install -g @openai/codex",
  "postAttachCommand": "just check"
}
